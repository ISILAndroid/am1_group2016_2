        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.isil.list.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.isil.list.SimpleListActivity"
            android:label="@string/title_activity_simple_list" />
        <activity android:name="com.isil.list.SimpleGridActivity" />
        <activity android:name="com.isil.list.CustomListActivity" />
        <activity android:name="com.isil.list.MovieGridActivity" />
    </application>

</manifest>